---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Antarctica DAO - Supporting Farcaster Development" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--text-color: #e6c2ff;
		--background-color: #1a1a1a;
		--accent-color: #9966cc;
		--scrollbar-bg: #1a1a1a;
		--scrollbar-thumb-start: #a8d8ff;
		--scrollbar-thumb-end: #1e90ff;
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: var(--background-color);
		color: var(--text-color);
	}
	body {
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	main {
		flex: 1;
		padding: 2rem;
		max-width: 800px;
		margin: 0 auto;
	}
	h1, h2, h3, h4, h5, h6 {
		color: var(--accent-color);
	}
	a {
		color: var(--accent-color);
		text-decoration: none;
		transition: color 0.3s ease;
	}
	a:hover {
		color: var(--text-color);
	}
	@media (prefers-color-scheme: light) {
		:root {
			--text-color: #4a0e4e;
			--background-color: #f0e6ff;
			--accent-color: #7c3aed;
			--scrollbar-bg: #f0e6ff;
			--scrollbar-thumb-start: #a8d8ff;
			--scrollbar-thumb-end: #4682b4;
		}
	}

	/* Scrollbar Styles for WebKit Browsers (Chrome, Safari, Edge) */
	::-webkit-scrollbar {
		width: 12px;
	}

	::-webkit-scrollbar-track {
		background: var(--scrollbar-bg);
		border-radius: 6px;
	}

	::-webkit-scrollbar-thumb {
		background: linear-gradient(
			to bottom,
			var(--scrollbar-thumb-start) 0%,
			var(--scrollbar-thumb-end) 100%
		);
		border-radius: 6px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: linear-gradient(
			to bottom,
			var(--scrollbar-thumb-end) 0%,
			var(--scrollbar-thumb-start) 100%
		);
	}

	/* Scrollbar Styles for Firefox */
	* {
		scrollbar-width: thin;
		scrollbar-color: var(--scrollbar-thumb-start) var(--scrollbar-bg);
	}
</style>